<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="420dp"
        android:layout_height="100dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="-20dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/real_cookie_bar" />

    <ImageView
        android:id="@+id/lichenification"
        android:layout_width="361dp"
        android:layout_height="222dp"
        android:layout_gravity="center"
        android:layout_marginTop="-200dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/lichenification" />

    <ImageView
        android:id="@+id/detail_activity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="360dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/explain_title" />

    <ImageView
        android:id="@+id/detail_activity1"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/explain_explain" />

    <ImageButton
        android:id="@+id/cause_button"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_marginTop="630dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/explain_button"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/homeButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="360dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/real_home_button" />
</FrameLayout>
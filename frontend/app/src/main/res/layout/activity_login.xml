<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="420dp"
        android:layout_height="100dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="-20dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/real_cookie_bar" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="330dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/id_enter" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="400dp"
        app:srcCompat="@drawable/ps_enter" />

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="353dp"
        android:layout_marginLeft="18dp"
        android:hint="아이디" />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:hint="비밀번호"
        android:layout_marginTop="417dp"
        android:layout_marginLeft="18dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="480dp"
        android:text="회원이 아니신가요?" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="140dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/login_text" />

    <ImageButton
        android:id="@+id/btn_login"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="로그인"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/login_button"
        android:layout_gravity="center|top"
        android:scaleType="fitCenter"
        android:layout_marginTop="550dp"  />




</FrameLayout>
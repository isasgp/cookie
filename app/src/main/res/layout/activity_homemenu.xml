<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    tools:context=".HomeMenuActivity">



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="220dp"
        android:layout_height="400dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="430dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/main_hello" />

    <LinearLayout
        android:id="@+id/page"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@drawable/page_page"
        android:visibility="gone">



        <ImageButton
            android:id="@+id/btn_record"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="기록"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/real_record"
            android:scaleType="fitXY"
            android:background="@android:color/transparent" />


        <ImageButton
            android:id="@+id/btn_diagnosis"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="진단"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="-10dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/real_camera"/>

        <ImageButton
            android:id="@+id/btn_community"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="28dp"
            android:layout_gravity="center"
            android:text="커뮤니티"
            android:layout_marginBottom="60dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/real_cummunity" />

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="설정"
            android:scaleType="fitCenter"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/real_setting"
             />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|center_vertical"
        android:background="#00000000">
    </LinearLayout>




    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="420dp"
        android:layout_height="100dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="-20dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/real_cookie_bar" />

    <ImageButton
        android:id="@+id/no_diagnosis"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/home_button_no_info"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/no_doginfo"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/home_no_dog_info"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="221dp"
        android:layout_height="220dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="40dp"
        android:background="@android:color/transparent"
        android:text="메뉴 보기"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cookie_open" />

</FrameLayout>